<Window x:Class="Tutorial1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tutorial1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Label x:Name="label" Content="Hello World" HorizontalAlignment="Left" Margin="164,54,0,0" VerticalAlignment="Top" Foreground="#FF0000FE" FontFamily="Harlow Solid Italic" FontSize="40"/>
		<Button x:Name="button" Content="Click" HorizontalAlignment="Left" Margin="164,141,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" BorderBrush="Lime" Foreground="Red"/>
		<Slider x:Name="slider" HorizontalAlignment="Left" Margin="164,120,0,0" VerticalAlignment="Top" Width="225" Maximum="255" Value="255" ValueChanged="slider_ValueChanged"/>
		<CheckBox x:Name="checkBox" Content="Show Opacity" HorizontalAlignment="Left" Margin="252,145,0,0" VerticalAlignment="Top" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked"/>

	</Grid>
</Window>
