<Window x:Class="A2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="321" VerticalAlignment="Top" Width="519" Margin="0,0,-0.333,-0.333">
			<TabItem Header="Stopwatch">
				<Grid Background="#FFE5E5E5">
					<ListBox x:Name="listBox" HorizontalAlignment="Left" Height="100" Margin="96,183,0,0" VerticalAlignment="Top" Width="300"/>
					<Label x:Name="label_Copy" Content="00:00:00" HorizontalAlignment="Center" Margin="154,10,152.667,0" VerticalAlignment="Top" FontSize="48" Width="206"/>
				</Grid>
			</TabItem>
			<TabItem Header="Timer">
				<Grid Background="#FFE5E5E5">
					<Label x:Name="timerHour" Content="00" HorizontalAlignment="Center" Margin="143,10,297.667,0" VerticalAlignment="Top" FontSize="48" Width="72"/>
					<Label x:Name="timerColon1" Content=":" HorizontalAlignment="Center" Margin="200,10,232.667,0" VerticalAlignment="Top" FontSize="48" Width="80"/>
					<Label x:Name="timerMin" Content="00" HorizontalAlignment="Center" Margin="215,10,227.667,0" VerticalAlignment="Top" FontSize="48" Width="70"/>
					<Label x:Name="timerColon2" Content=":" HorizontalAlignment="Center" Margin="274,10,158.667,0" VerticalAlignment="Top" FontSize="48" Width="80"/>
					<Label x:Name="timerSec" Content="00" HorizontalAlignment="Center" Margin="285,10,147.667,0" VerticalAlignment="Top" FontSize="48" Width="80"/>
					<Label x:Name="labelHour" Content="hr" HorizontalAlignment="Left" Margin="75,100,0,0" VerticalAlignment="Top" FontSize="24"/>
					<Label x:Name="labelMin" Content="min" HorizontalAlignment="Left" Margin="185,100,0,0" VerticalAlignment="Top" FontSize="24"/>
					<Label x:Name="labelSec" Content="sec" HorizontalAlignment="Left" Margin="301,100,0,0" VerticalAlignment="Top" FontSize="24"/>
					<TextBox x:Name="textBoxHour" HorizontalAlignment="Left" Height="23" Margin="118,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Text="0"/>
					<TextBox x:Name="textBoxMin" HorizontalAlignment="Left" Height="23" Margin="235,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Text="0"/>
					<TextBox x:Name="textBoxSec" HorizontalAlignment="Left" Height="23" Margin="354,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Text="0"/>
					<Button x:Name="timerButton" Content="Start" HorizontalAlignment="Left" Margin="225,185,0,0" VerticalAlignment="Top" Width="65" Click="button_Click" BorderBrush="#FF1FFF00"/>
					
				</Grid>
			</TabItem>
		</TabControl>

	</Grid>
</Window>
